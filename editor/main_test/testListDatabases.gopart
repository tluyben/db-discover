func TestListDatabases(t *testing.T) {
	setupTestDB()
	defer teardownTestDB()

	// Insert test data
	metaDB.Exec("INSERT INTO databases (name, description, workspace_id) VALUES (?, ?, ?)", "TestDB1", "Test database 1", 1)
	metaDB.Exec("INSERT INTO databases (name, description, workspace_id) VALUES (?, ?, ?)", "TestDB2", "Test database 2", 1)

	router := mux.NewRouter()
	router.HandleFunc("/databases", listDatabases).Methods("GET")

	req, _ := http.NewRequest("GET", "/databases?workspace_id=1", nil)
	rr := httptest.NewRecorder()

	router.ServeHTTP(rr, req)

	if status := rr.Code; status != http.StatusOK {
		t.Errorf("handler returned wrong status code: got %v want %v", status, http.StatusOK)
	}

	var response []Database
	json.Unmarshal(rr.Body.Bytes(), &response)

	if len(response) != 2 {
		t.Errorf("handler returned unexpected number of databases: got %v want %v", len(response), 2)
	}
}
