func TestDestroyDatabase(t *testing.T) {
	setupTestDB()
	defer teardownTestDB()

	// Insert test data
	result, _ := metaDB.Exec("INSERT INTO databases (name, description, workspace_id) VALUES (?, ?, ?)", "TestDB", "Test database", 1)
	id, _ := result.LastInsertId()

	router := mux.NewRouter()
	router.HandleFunc("/databases/{id}", destroyDatabase).Methods("DELETE")

	req, _ := http.NewRequest("DELETE", fmt.Sprintf("/databases/%d", id), nil)
	rr := httptest.NewRecorder()

	router.ServeHTTP(rr, req)

	if status := rr.Code; status != http.StatusNoContent {
		t.Errorf("handler returned wrong status code: got %v want %v", status, http.StatusNoContent)
	}

	// Verify database is deleted
	var count int
	metaDB.QueryRow("SELECT COUNT(*) FROM databases WHERE id = ?", id).Scan(&count)
	if count != 0 {
		t.Errorf("database was not deleted: got %v records, want 0", count)
	}
}
