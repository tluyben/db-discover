func TestCreateDatabase(t *testing.T) {
	setupTestDB()
	defer teardownTestDB()

	router := mux.NewRouter()
	router.HandleFunc("/databases", createDatabase).Methods("POST")

	payload := []byte(`{"name":"TestDB","description":"Test database","workspace_id":1}`)
	req, _ := http.NewRequest("POST", "/databases", bytes.NewBuffer(payload))
	rr := httptest.NewRecorder()

	router.ServeHTTP(rr, req)

	if status := rr.Code; status != http.StatusOK {
		t.Errorf("handler returned wrong status code: got %v want %v", status, http.StatusOK)
	}

	var response Database
	json.Unmarshal(rr.Body.Bytes(), &response)

	if response.Name != "TestDB" {
		t.Errorf("handler returned unexpected body: got %v want %v", response.Name, "TestDB")
	}
}
