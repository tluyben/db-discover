func TestListFields(t *testing.T) {
	setupTestDB()
	defer teardownTestDB()

	// Insert test data
	dbResult, _ := metaDB.Exec("INSERT INTO databases (name, description, workspace_id) VALUES (?, ?, ?)", "TestDB", "Test database", 1)
	databaseID, _ := dbResult.LastInsertId()
	tableResult, _ := metaDB.Exec("INSERT INTO tables (name, database_id) VALUES (?, ?)", "TestTable", databaseID)
	tableID, _ := tableResult.LastInsertId()
	metaDB.Exec("INSERT INTO fields (name, type, table_id) VALUES (?, ?, ?)", "TestField1", "TEXT", tableID)
	metaDB.Exec("INSERT INTO fields (name, type, table_id) VALUES (?, ?, ?)", "TestField2", "INTEGER", tableID)

	router := mux.NewRouter()
	router.HandleFunc("/fields", listFields).Methods("GET")

	req, _ := http.NewRequest("GET", fmt.Sprintf("/fields?table_id=%d", tableID), nil)
	rr := httptest.NewRecorder()

	router.ServeHTTP(rr, req)

	if status := rr.Code; status != http.StatusOK {
		t.Errorf("handler returned wrong status code: got %v want %v", status, http.StatusOK)
	}

	var response []Field
	json.Unmarshal(rr.Body.Bytes(), &response)

	if len(response) != 2 {
		t.Errorf("handler returned unexpected number of fields: got %v want %v", len(response), 2)
	}
}
