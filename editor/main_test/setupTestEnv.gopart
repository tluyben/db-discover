func setupTestEnv() {
	workspaceBasePath = os.TempDir()
	metaDBPath = filepath.Join(workspaceBasePath, "test_metadb.db")

	var err error
	metaDB, err = sql.Open("sqlite3", metaDBPath)
	if err != nil {
		panic(err)
	}

	initMetaDB()
}

func teardownTestEnv() {
	metaDB.Close()
	os.Remove(metaDBPath)
}
